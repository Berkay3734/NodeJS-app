<body>
    <div class="container">
        <a href="index"><div class="menu">Anasayfa</div></a>
        <a href="student"><div class="menu">Öğrenciler</div></a>
        <a href="teacher"><div class="menu">Öğretmenler</div></a>
        <a href="lesson"><div class="menu">Dersler</div></a>
        </div>
    
        <div>
            <table>
                <thead>
                    <tr>
                        <td style="text-align: center;">Id</td>
                        <td style="text-align: center;">Name</td>
                        <td style="text-align: center;">Surname</td>
                        <td style="text-align: center;">Gender</td>
                        <td style="text-align: center;">Create Date</td>
                        <td><a href="add"><button type="submit" style="background-color: lightblue;">Yeni Kayıt</button></a></td>

                    </tr>
                </thead>
                <tbody>
                <% result.forEach(element => {%>
                    <tr>
                        <td><%=element._id %></td>
                        <td><%=element.name %></td>
                        <td><%=element.surname %></td>
                        <td><%=element.gender %></td>
                        <td><%=element.createdAt %></td>
                        <!-- <td><button type="button" class="delete" data-doc="<%=element._id%>">Sil</button></td> -->
                    </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
